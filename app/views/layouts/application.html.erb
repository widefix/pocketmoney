<!DOCTYPE html>
<html>
  <head>
    <title>BudgetingKid</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container hero is-fullheight">
      <nav class="navbar is-spaced is-navbar-white-color has-shadow" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <%= link_to root_path, class: "navbar-item" do %>
            <%= image_tag 'logo.svg', width: 70, height: 40 %>
            <H2 class='budgeting-kid-logo-font' > BUDGETINGkid </H2>
          <% end %>
          <a role="button is-primary" class="navbar-burger" aria-label="menu" aria-expanded="true" data-target="navbarMenu">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>
        <div id="navbarMenu" class="navbar-menu">
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <% if user_signed_in? %>
                  <div class="navbar-item has-dropdown is-hoverable">
                    <a class="button is-primary is-hide-for-mobile">
                      <span class="icon">
                        <i class="fa fa-user-circle fa-lg"></i>
                      </span>
                    </a>
                    <div class="navbar-dropdown is-right is-boxed">
                      <%= link_to edit_user_registration_path, class: "navbar-item"  do %>
                        <span class="icon">
                          <i class="fa fa-user-o"></i>
                        </span>
                        &nbsp;
                        My profile
                      <% end %>
                      <%= link_to new_feedback_path, class: "navbar-item" do %>
                        <span class="icon">
                          <i class="fa fa-comment-o"></i>
                        </span>
                        &nbsp;
                        Feedback
                      <% end %>
                      <hr class="navbar-divider">
                      <%= link_to destroy_user_session_path, method: :delete, class:"navbar-item" do %>
                        <span class="icon">
                          <i class="fa fa-sign-out"></i>
                        </span>
                        &nbsp;
                        Log out
                      <% end %>
                    </div>
                  </div>
                <% else %>
                  <%= link_to 'Sign up', new_user_registration_path, class: 'button is-primary' %>
                  <%= link_to 'Log in', new_user_session_path, class: 'button is-light' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </nav>

      <section class="section is-fullheight">
        <%= yield %>
      </section>

      <footer class="footer is-flex-align-items-flex-end mt-auto">
        <p> Copyright Â© <%= Time.current.year %> <%= link_to("WideFix", "https://widefix.com/")%>. All rights reserved. </p>
      </footer>

      <footer class="navbar-footer is-flex-align-items-flex-end is-hide-for-desktop">
        <div class="columns is-mobile is-gapless">
          <div class="column">
            <%= button_to my_account_path, method: :get, class:'button is-footer-light is-fullwidth' do %>
              <span class="icon">
                <i class="fa fa-home fa-lg"></i>
              </span>
            <% end %>
          </div>
          <div class="column ">
            <%= button_to new_feedback_path, method: :get, class:'button is-footer-light is-fullwidth' do %>
              <i class="fa fa-comments-o fa-lg"></i>
            <% end %>
          </div>
          <div class="column ">
            <%= button_to edit_user_registration_path, method: :get, class:'button is-footer-light is-fullwidth' do %>
              <i class="fa fa-user-o fa-lg"></i>
            <% end %>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
