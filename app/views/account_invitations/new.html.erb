<div class="columns">
  <div class="column is-three-quarters">
    <%= link_to 'Back', account_invitations_path, class: 'button is-light' %>
  </div>
  <div class="column is-flex is-justify-content-flex-end">
  </div>
</div>
<%= form_with model: @account_invitation, url: account_invitations_path(account)  do |form| %>
  <div class="column is-one-third">
    <%= form.label :name %>
    <%= form.text_field :name, type:"text", class: 'input'%>
    <%= form.label :email %>
    <%= form.email_field :email,  type: "email"%>
  </div>
  <%= form.submit :Create, class: 'button is-light' %>
<% end %>
