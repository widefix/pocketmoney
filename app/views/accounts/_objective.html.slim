tr
  td= objective.name
  td
    = objective.amount
    br
    = "it takes #{([objective.amount, 0].max / account.automatic_topup_configs.sum(:amount).+(0.1)).ceil} weeks"
  td.has-text-centered
    =
    | #{goal_percentage(account, objective)}
    progress.progress.is-small(value="#{goal_percentage(account, objective).chomp('%')}" max="100") #{goal_percentage(account, objective)}
  - week_to_achieved = objective.week_to_achieved
  td= (week_to_achieved == -1 ? "Achieved" : week_to_achieved)
  td
    = link_to objective_path(objective), method: :delete, data: {confirm: 'Delete this objective?'}, class: 'button is-small is-light' do
      span.icon
        i.fa.fa-trash-o 
      | &nbsp; Delete
